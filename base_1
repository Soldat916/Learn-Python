name = "ada lovelace"
print (name.title())    #首字母大写
print (name.upper())    #全部大写
print (name.lower())    #全部小写
first_name = "ada"
last_name = "lovelace"
full_name = first_name + ' ' +last_name #字符串合并
print(full_name)

print ("\tJiangzheng")  #制表符\t
print ("jiang\nzheng\nlove\n")  #换行符\n
print ("\tjiang\n\tzheng\n\tlove")

ex = ' python '
ex = ex.rstrip()    #删除字符末尾空白
print ex
ex = ex.lstrip()    #删除字符开头空白
print ex


